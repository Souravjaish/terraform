pipeline {
  agent any

  stages {
    stage('source') {
      steps {
        git 'https://github.com/Souravjaish/terraform.git'
      }
    }
    
    stage('Terraform Init') {
      steps {
        sh 'terraform init'
      }
    }
    
    stage('Terraform Plan') {
      steps {
        sh 'terraform plan -out=tfplan'
      }
    }
    
    stage('Terraform Apply') {
      steps {
        input "Deploy? (type 'yes' to deploy)"
        sh 'terraform apply tfplan'
      }
    }
  }
}
